@model abc2.Models.Cart
@{
    ViewData["Title"] = "Your Cart";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["CartMessage"] != null)
{
    <div class="alert alert-warning">@TempData["CartMessage"]</div>
}


@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product?.ProductName</td>
                    <td>@item.Product?.Price?.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Product?.Price ?? 0) * item.Quantity).ToString("C")</td>
                    <td>
                        <form asp-action="RemoveItem" method="post">
                            <input type="hidden" name="itemId" value="@item.CartItemId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
}
