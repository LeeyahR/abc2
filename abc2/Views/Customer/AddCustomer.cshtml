@model abc2.Models.Customer

<h1>Add New Customer</h1>

<form asp-action="AddCustomer" method="post">
    <div class=" form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-contol" />
    </div>
    <div class=" form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-contol" />
    </div>
    <div class=" form-group">
        <label asp-for="ContactNo"></label>
        <input asp-for="ContactNo" class="form-contol" />
    </div>
    <div class=" form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-contol" />
    </div>
    <div class=" form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-contol" />
    </div>
    <button type="submit" class="btn btn-purple">Save</button>
</form>

<!-- Back to Home button -->
<div class="mt-3">
    <a asp-controller="Customer" asp-action="Index" class="btn btn-purple">
        Back to Customer Page
    </a>
</div>