@model abc2.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerID</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Details</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.OrderLocation</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
