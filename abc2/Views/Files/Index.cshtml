@model List<abc2.Models.FileModel>

<h1>Files</h1>

<!--Display any messages-->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<!--Upload form-->
<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Choose a file to upload</label>
        <input type="file" name="file" class="form-control" />
        <button type="submit" class="btn btn-info mt-2">Upload</button>
    </div>
</form>

<!--Display uploaded files-->
@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var file in Model)
        {
            <li>
                @file.Name -
                Size: @file.DisplaySize -
                Last Modified: @file.LastModified?.ToString("g")

                <!-- Download link -->
                - <a asp-action="DownloadFile" asp-route-fileName="@file.Name">Download</a>

                <!-- Delete form -->
                <form asp-action="DeleteFile" method="post" style="display:inline;">
                    <input type="hidden" name="fileName" value="@file.Name" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No files found or model is null</p>
}

<!-- Back to Home button -->
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-info">
        Back to Home Page
    </a>
</div>
