@model IEnumerable<abc2.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="text-center">
        <h1 class="display-4">Products in storage</h1>
        <p>This data was retrieved from Azure Functions</p>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-clockwise"></i> Refresh Data
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>ProductName</th>
                <th>Details</th>
                <th>Price</th>
                <th>Date Added (UTC)</th>
                <th>Action</th> <!-- New column for Add to Cart -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.OrderByDescending(prop => prop.Timestamp))
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Details</td>
                    <td>@product.Price</td>
                    <td>@product.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center">
                            <!-- Replace this with the logged-in user's customer ID -->
                            <input type="hidden" name="customerId" value="@TempData["CustomerId"] ?? 1" />
                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <input type="number" name="quantity" value="1" min="1" class="form-control form-control-sm me-2" style="width:70px;" />
                            <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-4">No products found in the table.</p>
}

<!-- Back to Home button -->
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        Back to Home Page
    </a>
</div>
