@model IEnumerable<abc2.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="text-center">
        <h1 class="display-4">Products in storage</h1>
        <p>This data was retrieved from Azure Functions</p>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-clockwise"></i> Refresh Data
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>ProductName</th>
                <th>Details</th>
                <th>Price</th>
                <th>Date Added (UTC)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model.OrderByDescending(prop => prop.Timestamp))
            {
                <tr>
                    <td>@products.ProductName</td>
                    <td>@products.Details</td>
                    <td>@products.Price</td>
                    <td>@products.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-4">No products found in the table.</p>
}

<!-- Back to Home button -->
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        Back to Home Page
    </a>
</div>